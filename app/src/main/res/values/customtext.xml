<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/static_spinner</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="boldGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/static_spinner</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="grayLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2.2dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:background">#f2f2f2</item>
    </style>

    <style name="convFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:text">@string/equiv_reps_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="convFont2" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:gravity">left</item>
        <item name="android:text">@string/equiv_reps_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

</resources>
